    "mongodb": "^4.1.4"
  },
  "devDependencies": {
    "@types/ioredis": "^4.28.1",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^14.17.34",
    "@types/ws": "^8.2.0",
    "jest": "^27.3.1",
    "ts-jest": "^26.5.6",
    "ts-node": "^8.10.2",
    "tslint": "^5.20.1",
    "typescript": "^4.5.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
